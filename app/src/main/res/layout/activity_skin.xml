            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
