<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <item name="android:icon">@android:color/transparent</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Button Styling -->
    <style name="buttonstyle" parent="@android:style/Widget.Button">
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.6</item>
        <item name="android:background">@drawable/buttonstyle</item>
        <item name="android:padding">10dp</item>
    </style>



    <style name="sid" parent="@android:style/Widget.TextView">
        <item name="android:textSize">40dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="h1" parent="@android:style/Widget.TextView">
        <item name="android:textSize">22dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="h4" parent="@android:style/Widget.TextView">
        <item name="android:textSize">22dp</item>
        <item name="android:textColor">#ffa4a09f</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="h2" parent="@android:style/Widget.TextView">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#FFF9000F</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text" parent="@android:style/Widget.EditText">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="head" parent="@android:style/Widget.TextView">
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:background">#000000</item>
    </style>

    <style name="Separator">
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:background">#ff91a8f9</item>
    </style>

    <style name="Separator1">
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:background">#ff91a8f9</item>
    </style>

    <style name="nexto">
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:background">#ff91a8f9</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:background">#ff91a8f9</item>
    </style>

    <style name="Circle">
        <item name="android:shape">rectangle</item>
        <item name="android:layout_width">4dp</item>
        <item name="android:layout_height">10dp</item>
    </style>

    <style name="h3" parent="@android:style/Widget.TextView">
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Differentiator">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">#ff91a8f9</item>
    </style>

    <style name="Delimiter">
        <item name="android:layout_width">3dp</item>
        <item name="android:layout_height">110dp</item>
        <item name="android:background">#ff91a8f9</item>
    </style>

</resources>
