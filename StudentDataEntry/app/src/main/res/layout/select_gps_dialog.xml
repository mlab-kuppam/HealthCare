            style="@style/radioButton"
            android:text="School"
            android:id="@+id/schoolRadio"/>
        <RadioButton
            style="@style/radioButton"
            android:id="@+id/childRadio"
            android:text="Child"/>
    </RadioGroup>


</LinearLayout>