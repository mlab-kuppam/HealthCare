<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.mlab.pes.healthcare"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-feature android:name="android.hardware.camera"/>

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".UpdateActivity"
            android:label="Update Health Details"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ENTActivity"
            android:label="ENT"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".SchoolDetails"
            android:label="School Details"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".SkinActivity"
            android:label="Skin"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".HealthActivity1"
            android:label="Health"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".HealthActivity2"
            android:label="Health"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".EyeActivity1"
            android:label="Eye"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".EyeActivity2"
            android:label="Eye"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".StudentDetails"
            android:label="@string/title_activity_student_details"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".SocioDemographicDetails"
            android:label="@string/title_activity_socio_demographic_details"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".studentDataEntry"
            android:label="@string/title_activity_student_data_entry"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".getGPSLocation"
            android:label="@string/title_activity_get_gpslocation"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".schoolGPS"
            android:label="@string/title_activity_get_gpslocation"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".syncingData"
            android:label="@string/title_activity_syncing_data"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
