<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mlab.pes.healthcare.UpdateActivity">

    <LinearLayout
        style="@style/horizontal"
        android:id="@+id/StudentIDLayout"
        android:orientation="vertical"
        android:background="@drawable/main_activity_shape"
        android:layout_marginTop="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/schoolId"
            android:layout_weight=".6"
            style="@style/studentID"
            android:textColor="#fff"
            android:paddingLeft="0dp"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/studentID"
            android:textColor="#fff"
            android:id="@+id/schoolIdDisplay"
            android:layout_weight=".6"
            android:layout_gravity="center_vertical"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:layout_weight=".6"
                style="@style/studentID"
                android:textColor="#fff"
                android:paddingLeft="0dp"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/studentID"
                android:textColor="#fff"
                android:id="@+id/schoolNameDisplay"
                android:layout_weight=".6"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/health"
        style="@style/buttonstyle"
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:layout_marginTop="180dp"
        android:drawableLeft="@drawable/ic_add_box_white_36dp"
        android:onClick="CHANGE"
        android:text="Health"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/eye"
        style="@style/buttonstyle"
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:layout_below="@+id/health"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:drawableLeft="@drawable/ic_visibility_white_36dp"
        android:onClick="CHANGE"
        android:text="EYE"/>

    <Button
        android:id="@+id/eyevisionTesting"
        style="@style/buttonstyle"
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:layout_below="@+id/eye"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:drawableLeft="@drawable/ic_visibility_white_36dp"
        android:onClick="CHANGE"
        android:text="EYE - Vision Testing"/>
    <Button
        android:id="@+id/ent"
        style="@style/buttonstyle"
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:layout_below="@+id/eyevisionTesting"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:drawableLeft="@drawable/ic_hearing_white_36dp"
        android:onClick="CHANGE"
        android:text="ENT"/>

    <Button
        android:id="@+id/skin"
        style="@style/buttonstyle"
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:layout_below="@+id/ent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:drawableLeft="@drawable/ic_perm_identity_white_36dp"
        android:onClick="CHANGE"
        android:text="SKIN" />

</RelativeLayout>
