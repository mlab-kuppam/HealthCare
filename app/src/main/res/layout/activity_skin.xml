                    android:layout_height="wrap_content"
                    android:layout_marginLeft="300dp"
                    android:layout_marginTop="60dp"
                    android:id="@+id/pedi_text"
                    style="@style/biig"
                    android:hint="@string/hint"
                    android:visibility="gone"/>

            </RelativeLayout>

            <RelativeLayout
